<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dunyaarkaplan"
    tools:context=".sifrelemesayfasi">

    <TextView
        android:id="@+id/sonuc_textView"
        android:layout_width="352dp"
        android:layout_height="146dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/plaintext"
        android:text="adfadfaf"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_sifre_edittext" />

    <CheckBox
        android:id="@+id/sha256_checkBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="38dp"
        android:text="SHA 256"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spn_sifre_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spn_checkbox"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/spn_checkbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="456dp"
        android:text="SPN"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sha256_checkBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yazilanmetin_edittext" />

    <EditText
        android:id="@+id/yazilanmetin_edittext"
        android:layout_width="349dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/plaintext"
        android:ems="10"
        android:hint="Mesajınnızı Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/spn_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="324dp"
        android:layout_height="0dp"
        android:layout_marginBottom="82dp"
        android:background="@drawable/butonarkasi"
        android:onClick="buton"
        android:text="GÖSTER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonuc_textView" />

    <EditText
        android:id="@+id/spn_sifre_edittext"
        android:layout_width="348dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/plaintext"
        android:ems="10"
        android:hint="Şifrenizi Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sonuc_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sha256_checkBox" />

</androidx.constraintlayout.widget.ConstraintLayout>